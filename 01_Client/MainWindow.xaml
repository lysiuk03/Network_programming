<Window x:Class="_02_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Margin="10" FontSize="16">Country:</Label>
            <TextBox x:Name="country_tb" Margin="10" FontSize="16"></TextBox>
            <Button Click="Button_Click" Margin="10" FontSize="16">Send</Button>
        </StackPanel>
        <ListBox Name="list" Grid.Column="1" FontSize="16"></ListBox>
    </Grid>
</Window>
